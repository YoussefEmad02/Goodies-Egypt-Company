       $.ajax({
    url: 'http://localhost:3000/api/Home',
    type: 'GET',
    dataType: 'json',
    success: function (data) {
        // Update the content with the data retrieved from the API
        if (data.Home && data.Home.length > 0) {
            const homeData = data.Home[0];

            // Update mispar
            $('[data-lan="mispar"]').text(homeData.MissionParaArabic);
            $('[data-lan="mission"]').text(homeData.MissionHeaderArabic);

            // Update visionpar
            $('[data-lan="visionpar"]').text(homeData.VisionParaArabic);
            $('[data-lan="vision"]').text(homeData.VisionHeaderArabic);

            // Update exportpar
            $('[data-lan="exportpar"]').text(homeData.ExportParaArabic);
            $('[data-lan="export"]').text(homeData.ExportHeaderArabic);

            // Update ourstorypar
            $('[data-lan="ourstorypar"]').text(homeData.OurStoryParaArabic);
            $('[data-lan="ourstory"]').text(homeData.OurStoryHeaderArabic);

            // Update carousel images
            $('.carousel-item:nth-child(1) img').attr('src', homeData.Image1);
            $('.carousel-item:nth-child(2) img').attr('src', homeData.Image2);
            $('.carousel-item:nth-child(3) img').attr('src', homeData.Image3);

            // Update mission image
            $('#mission img').attr('src', homeData.MissionImg);
            displayBase64Image(homeData.MissionImgData, '#mission img');
            // Update vision image
            $('#vision img').attr('src', homeData.VisionImg);
            displayBase64Image(homeData.VisionImgData, '#vision img');
            // Update export image
            $('#export img').attr('src', homeData.ExportImg);

            // Display images using base64 encoding
            displayBase64Image(homeData.ExportImgData, '#export img');

            $('#vidd img').attr('src', homeData.FirstVideo);
            displayBase64Image(homeData.FirstVideoData, '#vidd img');

            $('.fixedBg').css('background-image', 'url(data:image/png;base64,' + homeData.backgroundData + ')');

            // Repeat the process for other image fields if needed
            // ...

        }
    },
    error: function (error) {
        console.error('Error fetching data from API:', error);
    }
});
$.ajax({
    url: 'http://localhost:3000/api/brands',
    type: 'GET',
    dataType: 'json',
    success: function (data) {
        const brands = data.brand;
        const cardRow = $('.cardrow');

        brands.forEach(brand => {
            const brandCard = `
            <div class="card col-md-4 mb-4 border-0" data-aos="fade-down" data-aos-duration="1000" data-aos-once="true">
                <a href="${brand.link}" class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <img src="data:image/jpeg;base64,${brand.imageData}" alt="${brand.name}" class="brand-image">
                        </div>
                        <div class="flip-card-back">
                            <p>${brand.paraar}</p>
                        </div>
                    </div>
                </a>
            </div>
            `;
            cardRow.append(brandCard);
        });
    },
    error: function (error) {
        console.error('Error fetching brand data:', error);
    }
});

$.ajax({
    url: 'http://localhost:3000/api/Carousel',
    type: 'GET',
    dataType: 'json',
    success: function (data) {
      const carouselItems = data.carousel;
      const carouselInner = $('.carousel-inner');

      carouselItems.forEach((item, index) => {
        const activeClass = index === 0 ? 'active' : ''; // Add 'active' class to first item
        const carouselItem = `
          <div class="carousel-item ${activeClass}">
            <img src="data:image/jpeg;base64,${item.imageData}" class="d-block w-100 img-fluid" alt="Carousel Image">
          </div>
        `;
        carouselInner.append(carouselItem);
      });
    },
    error: function (error) {
      console.error('Error fetching carousel data:', error);
    }
  });
// Function to display base64-encoded image
function displayBase64Image(base64Image, selector) {
    if (base64Image) {
        $(selector).attr('src', 'data:image/jpeg;base64,' + base64Image);
    } else {
        // Handle the case where there is no image data
        console.log('No image data available');
    }
}
