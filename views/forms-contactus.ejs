<script>
    $(document).ready(function () {
        // Make an AJAX request to fetch data from the API
        console.log('Fetching data from API...');
        $.ajax({
            url: 'http://localhost:3000/api/ContactUsMsgs',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                // Log the retrieved data to the console for debugging
                console.log('Data retrieved from API:', data);
                console.log('Data retrieved from API:');

                // Update the content with the data retrieved from the API
                if (data.Message && data.Message.length > 0) {
                    const contactUsTable = $('#contactUsTable tbody');

                    // Iterate through the data and append rows to the table
                    data.Message.forEach(contact => {
                        contactUsTable.append(`
                            <tr>
                            
                                <td>${contact.Name}</td>
                                <td>${contact.Email}</td>
                                <td>${contact.Mobile}</td>
                                <td>${contact.Subject}</td>
                                <td>${contact.Message}</td>
                                <td>
                                    <button class="btn btn-danger delete-button" data-contact-id="${contact._id}">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        `);
                    });

                    // Add click event handler for delete buttons
                    $('.delete-button').on('click', function () {
                        // Get the contact ID associated with the clicked delete button
                        const contactId = $(this).data('contact-id');
                        
                        // Perform the delete action
                        deleteContact(contactId);
                    });
                } else {
                    console.log('No data received from the API.');
                }
            },
            error: function (error) {
                console.error('Error fetching data from API:', error);
            }
        });

        // Function to handle the delete action
        function deleteContact(contactId) {
    if (!contactId) {
        console.error('Invalid contact ID:', contactId);
        return;
    }

    // Make an AJAX request to delete the contact
    $.ajax({
        url: `http://localhost:3000/api/ContactUsMsgs/${contactId}`,
        type: 'DELETE',
        success: function () {
            console.log(`Contact with ID ${contactId} deleted successfully.`);
            alert(`Contact with ID ${contactId} deleted successfully.`);
            // Optionally, you can update the UI or perform additional actions after deletion.
        },
        error: function (xhr, status, error) {
            console.error(`Error deleting contact with ID ${contactId}:`, error);
            console.log('Server response:', xhr.responseText);
        }
    });
}
    });
</script>


        
     
    
    

