</head>

<body>
    <%- include("./partials/navbar.ejs") %>

    <!-- ****header**** -->
    <section class="text-center container" style="margin-top: 200px">
        <div class="row">
            <div class="col-md-12">
                <h3 data-lan="contactus">Contact Us</h3>
                <p data-lan="contactpar">Any question or remarks? Just write us a message!</p>
            </div>

            <div class="col-md-6 mt-md-3 mx-auto" style="margin-bottom: 50px">
                <div class="left-div">
                    <h4 class="text-light" data-lan="contactinfo">Contact Information</h4>
                    <p class="p" data-lan="livechat">Say something to start a live chat!</p>
                    <div class="icons">
                        <div class="icon">
                            <i class="fa-solid fa-phone-volume"></i>
                            <p>+217053</p>
                        </div>
                        <div class="icon">
                            <i class="fa-solid fa-envelope"></i>
                            <p>info@goodieschtaura.com</p>
                        </div>
                        <div class="icon">
                            <i class="fa-solid fa-location-dot"></i>
                            <p>
                                Industrial Area, New Cairo 3, Cairo <br />Governorate 4716027
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mt-md-3 mx-auto">
                <form>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="name" class="form-label" data-lan="name">Name</label>
                            <input type="text" class="form-control message" id="name" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label" data-lan="maillabel">Email address</label>
                            <input type="email" class="form-control message" id="mail" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="mobile" class="form-label" data-lan="mobile">Mobile</label>
                            <input type="text" class="form-control message" id="mobile" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="mobile" class="form-label" data-lan="mobile">Mobile</label>
                            <input type="text" class="form-control message" id="mobile2" />
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="subject" class="form-label" data-lan="subject">Subject</label>
                            <input type="text" class="form-control message" id="subject" />
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="message" class="form-label" data-lan="message">Message</label>
                            <textarea class="form-control" rows="10" id="message"></textarea>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="buttons text-center">
                                <button class="blob-btn btn btn-primary" id="sendMessageTo">
                                    <span data-lan="sendmessage" >
                                        Send Message
                                    </span>
                                    <span class="blob-btn__inner">
                                        <span class="blob-btn__blobs">
                                            <span class="blob-btn__blob"></span>
                                            <span class="blob-btn__blob"></span>
                                            <span class="blob-btn__blob"></span>
                                            <span class="blob-btn__blob"></span>
                                        </span>
                                    </span>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
                <div aria-live="polite" aria-atomic="true"  class="d-flex justify-content-center align-items-center w-100">
                    <div class="toast-container" style="position: absolute; bottom: 20px; left: 10px;">
                        <div class="toast bg-light text-white" role="alert" id="successToast" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
                            <div class="toast-header text-success">
                                <i class="fas fa-check-double"></i>
                                <strong class="me-auto"> Goodies Egypt</strong>
                            </div>
                            <div class="toast-body text-dark">
                                The message has been sent.
                            </div>
                        </div>
                    </div>
                </div>
                <div aria-live="polite" aria-atomic="true"  class="d-flex justify-content-center align-items-center w-100">
                    <div class="toast-container" style="position: absolute; bottom: 20px; left: 10px;">
                        <div class="toast bg-light text-white" role="alert" id="failedToast" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
                            <div class="toast-header text-danger">
                                <i class="fas fa-times"></i>
                                <strong class="me-auto"> Goodies Egypt</strong>
                            </div>
                            <div class="toast-body text-dark">
                                The message couldn't be sent.
                            </div>
                        </div>
                    </div>
                </div>
                <script>
                    $("#sendMessageTo").on("click",function(){
                        var senderName = $("#name").val()
                            ,senderMail = $("#mail").val()
                            ,senderMobile = $("#mobile").val()
                            ,senderMobile2 = $("#mobile2").val()
                            ,senderMessage = $("#message").val()
                            ,senderSubject = $("#subject").val();
                        $.ajax({
                            url		: "ajax/send_email.php",
                            type	: "POST",
                            async	: false,
                            data	: {
                                        getMessage       : 1,
                                        ajaxName       : senderName,
                                        ajaxMail       : senderMail,
                                        ajaxMobile     : senderMobile,
                                        ajaxMobile2     : senderMobile2,
                                        ajaxMessage    : senderMessage,
                                        ajaxSubject    : senderSubject,
                                    },
                            success	: function(result)
                            {
                                $("#name").val("");
                                $("#mail").val("");
                                $("#mobile").val("");
                                $("#mobile2").val("");
                                $("#message").val("");
                                $("#subject").val("");
                                var toastLiveExample = document.getElementById('successToast');
                                var toast = new bootstrap.Toast(toastLiveExample, {
                                    delay: 8000
                                })
                                toast.show();
                            },
                            error : function(error)
                            {
                                var toastFailed = document.getElementById('failedToast');
                                var toastNotDone = new bootstrap.Toast(toastFailed, {
                                    delay: 8000
                                })
                                toastNotDone.show();
                            }
                        });
                        return false;
                    });
                </script>
            </div>
        </div>
    </section>


