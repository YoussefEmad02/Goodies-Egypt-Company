    <script>
          $(document).ready(function () {
    $("#addubut").on('click', function (event) {
        event.preventDefault(); // Prevent the default form submission
        
        var LinkId = '65c698f884d68844f4873779'; // Replace with the actual home page ID
        
        var requestData = {};

        // Add only the fields that have been filled out by the user to the request data
        if ($("#youtube").val().trim() !== "") {
            requestData.youtube = $("#youtube").val().trim();
        }
        if ($("#facebook").val().trim() !== "") {
            requestData.facebook = $("#facebook").val().trim();
        }
        if ($("#instagram").val().trim() !== "") {
            requestData.instagram = $("#instagram").val().trim();
        }
        if ($("#linkedIn").val().trim() !== "") {
            requestData.linkedin = $("#linkedIn").val().trim();
        }
        if ($("#twitter").val().trim() !== "") {
            requestData.twitter = $("#twitter").val().trim();
        }

        console.log("link ID:", LinkId);
        console.log("Request Data:", requestData);

        $.ajax({
            url: 'http://localhost:3000/api/Link/update/' + LinkId,
            type: 'PATCH',
            data: requestData,
            dataType: 'json',
            success: function (response) {
                alert('link updated successfully!');
                console.log("Update successful:", response);
                // Optionally, you can redirect or perform other actions here
            },
            error: function (error) {
                alert('Error updating link page. Please try again.');
                console.error("Update error:", error);
            }
        });
    });
});

    </script>
